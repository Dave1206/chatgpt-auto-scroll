{
  "manifest_version": 3,
  "name": "ChatGPT Auto-Scroll",
  "version": "1.0.0",
  "description": "Keeps ChatGPT chats auto-scrolling to the bottom while responses stream. Simple on/off toggle.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
